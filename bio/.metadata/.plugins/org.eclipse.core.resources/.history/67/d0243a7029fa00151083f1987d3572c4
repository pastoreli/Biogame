		tituloZ.setBounds(30,10,500,60);
		tituloZ.setForeground(new Color(130,81,187));
		tituloZ.setFont(new Font("Century Gothic",  Font. PLAIN,  22));
		tituloZ.setVerticalAlignment(SwingConstants.CENTER);
