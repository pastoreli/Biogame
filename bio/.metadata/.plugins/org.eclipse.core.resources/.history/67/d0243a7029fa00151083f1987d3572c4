				}else{
					
					blockM = new JLabel("?");
					blockM.setBounds(30,50,200,100);
					blockM.setForeground(new Color(2,123,208));
					blockM.setFont(new Font("Century Gothic",  Font. PLAIN,  60));
					blockM.setVerticalAlignment(SwingConstants.CENTER);
					mosquito.add(blockM);
					
				}
				
			}
		
		} catch (SQLException e) {}
		
