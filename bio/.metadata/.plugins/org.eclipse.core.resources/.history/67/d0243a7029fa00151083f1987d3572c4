		sql = "SELECT nomeUsuario, nivel4 FROM tbUsuario WHERE nomeUsuario = '"+usuario.getUser()+"'";
		
		try {
			
			Statement stm = conn.createStatement();
			ResultSet rs = stm.executeQuery(sql);	
			
			if(rs.next()){
				
				if(rs.getInt("nivel4")==1){
					
					
					
				}else{
					
