		voltar.addActionListener(new ActionListener(){

			public void actionPerformed(ActionEvent e) {
				
				Efeitos f = new Efeitos();
				
				f.setEntrada(2);
				f.setSaida(4);
				f.setEscolhaE(5);
				
				f.transicaoReducao();
				
			}
					
